<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.statistics.SummaryStatisticsFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:checkable="true"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:contentPadding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#837A33F8">

        <!-- Media -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Фон медиачасти карточки-->
            <ImageView
                android:id="@+id/iv_user_custom_bg_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:alpha="0.3"
                android:contentDescription="бубубу"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/bg1_01_2"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:padding="16dp"
            tools:ignore="MissingClass">

            <ImageView
                android:id="@+id/iv_user_avatar"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center|center_horizontal"
                android:layout_margin="0dp"
                android:background="@drawable/round_border_style"
                android:contentDescription="@string/iv_userListItem_contentDescription"
                android:cropToPadding="false"
                android:padding="4dp"
                android:src="@drawable/ic_baseline_account_circle_24" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView_contributions_graph"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="8dp"
        android:checkable="false"
        android:clickable="false"
        android:focusable="true"
        android:padding="4dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:contentPadding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/materialCardView"
        app:rippleColor="#837A33F8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp">

            <TextView
                android:id="@+id/tv_activity_graph_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ежедневная активность."
                android:textSize="14sp"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toStartOf="@+id/rv_events_graph"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_da_coin_icon"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:contentDescription="Иконка DACoin"
                app:layout_constraintBottom_toBottomOf="@+id/tv_activity_da_coin_count"
                app:layout_constraintEnd_toStartOf="@id/tv_activity_da_coin_count"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_star_checkable_24" />

            <TextView
                android:id="@+id/tv_activity_da_coin_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="12 345 678"
                android:textSize="14sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_top_week_day_monday_title"
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:text="Пн"
                android:textSize="9sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toTopOf="@id/tv_top_week_day_tuesday_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_activity_graph_title" />

            <TextView
                android:id="@+id/tv_top_week_day_tuesday_title"
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:text="Вт"
                android:textSize="9sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toTopOf="@id/tv_top_week_day_wednesday_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_top_week_day_monday_title" />

            <TextView
                android:id="@+id/tv_top_week_day_wednesday_title"
                android:layout_width="18dp"
                android:layout_height="wrap_content"
