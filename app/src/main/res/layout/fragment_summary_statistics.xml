                app:layout_constraintTop_toBottomOf="@id/tv_top_week_day_thursday_title" />

            <TextView
                android:id="@+id/tv_top_week_day_saturday_title"
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:text="Сб"
                android:textColor="#F10606"
                android:textSize="9sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toTopOf="@id/tv_top_week_day_sunday_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_top_week_day_friday_title" />

            <TextView
                android:id="@+id/tv_top_week_day_sunday_title"
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:text="Вс"
                android:textColor="#F10606"
                android:textSize="9sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toTopOf="@id/tv_top_week_count_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_top_week_day_saturday_title" />

            <TextView
                android:id="@+id/tv_top_week_count_title"
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:text="№"
                android:textSize="9sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="@+id/rv_events_graph"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_top_week_day_sunday_title" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_events_graph"
                android:layout_width="0dp"
                android:layout_height="104dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/tv_top_week_day_monday_title"
                app:layout_constraintTop_toBottomOf="@id/tv_activity_graph_title" />

            <TextView
                android:id="@+id/tv_bottom_comment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Правила определения активности"
                android:textSize="9sp"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_events_graph" />

            <!--            ЛЕГЕНДА-->
            <TextView
                android:id="@+id/tv_bottom_legend_less_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Мало"
                android:textSize="9sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toStartOf="@+id/iv_legend_level1_mark"
                app:layout_constraintTop_toBottomOf="@id/rv_events_graph" />

            <ImageView
                android:id="@+id/iv_legend_level1_mark"
                android:layout_width="@dimen/elem_activity_graph_width"
                android:layout_height="@dimen/elem_activity_graph_height"
                android:contentDescription="@string/ImageView_contentDescription_book_cover"
                app:layout_constraintEnd_toStartOf="@+id/iv_legend_level2_mark"
                app:layout_constraintTop_toBottomOf="@+id/rv_events_graph"
                app:srcCompat="@drawable/round_square_indigo_50_24dp" />

            <ImageView
                android:id="@+id/iv_legend_level2_mark"
                android:layout_width="@dimen/elem_activity_graph_width"
                android:layout_height="@dimen/elem_activity_graph_height"
                android:contentDescription="@string/ImageView_contentDescription_book_cover"
                app:layout_constraintEnd_toStartOf="@+id/iv_legend_level3_mark"
                app:layout_constraintTop_toBottomOf="@+id/rv_events_graph"
                app:srcCompat="@drawable/round_square_indigo_100_24dp" />

            <ImageView
                android:id="@+id/iv_legend_level3_mark"
                android:layout_width="@dimen/elem_activity_graph_width"
                android:layout_height="@dimen/elem_activity_graph_height"
                android:contentDescription="@string/ImageView_contentDescription_book_cover"
                app:layout_constraintEnd_toStartOf="@+id/iv_legend_level4_mark"
                app:layout_constraintTop_toBottomOf="@+id/rv_events_graph"
                app:srcCompat="@drawable/round_square_indigo_200_24dp" />

            <ImageView
                android:id="@+id/iv_legend_level4_mark"
                android:layout_width="@dimen/elem_activity_graph_width"
                android:layout_height="@dimen/elem_activity_graph_height"
                android:contentDescription="@string/ImageView_contentDescription_book_cover"
                app:layout_constraintEnd_toStartOf="@+id/iv_legend_level5_mark"
                app:layout_constraintTop_toBottomOf="@+id/rv_events_graph"
                app:srcCompat="@drawable/round_square_indigo_300_24dp" />

            <ImageView
                android:id="@+id/iv_legend_level5_mark"
                android:layout_width="@dimen/elem_activity_graph_width"
                android:layout_height="@dimen/elem_activity_graph_height"
                android:contentDescription="@string/ImageView_contentDescription_book_cover"
                app:layout_constraintEnd_toStartOf="@+id/iv_legend_leve6_mark"
                app:layout_constraintTop_toBottomOf="@+id/rv_events_graph"
                app:srcCompat="@drawable/round_square_indigo_400_24dp" />

            <ImageView
                android:id="@+id/iv_legend_leve6_mark"
                android:layout_width="@dimen/elem_activity_graph_width"
                android:layout_height="@dimen/elem_activity_graph_height"
                android:contentDescription="@string/ImageView_contentDescription_book_cover"
                app:layout_constraintEnd_toStartOf="@+id/iv_legend_level7_mark"
                app:layout_constraintTop_toBottomOf="@+id/rv_events_graph"
                app:srcCompat="@drawable/round_square_indigo_500_24dp" />

            <ImageView
                android:id="@+id/iv_legend_level7_mark"
                android:layout_width="@dimen/elem_activity_graph_width"
                android:layout_height="@dimen/elem_activity_graph_height"
                android:contentDescription="@string/ImageView_contentDescription_book_cover"
                app:layout_constraintEnd_toStartOf="@+id/iv_legend_level8_mark"
                app:layout_constraintTop_toBottomOf="@+id/rv_events_graph"
                app:srcCompat="@drawable/round_square_indigo_600_24dp" />

            <ImageView
                android:id="@+id/iv_legend_level8_mark"
                android:layout_width="@dimen/elem_activity_graph_width"
                android:layout_height="@dimen/elem_activity_graph_height"
                android:contentDescription="@string/ImageView_contentDescription_book_cover"
                app:layout_constraintEnd_toStartOf="@+id/iv_legend_level9_mark"
                app:layout_constraintTop_toBottomOf="@+id/rv_events_graph"
                app:srcCompat="@drawable/round_square_indigo_700_24dp" />

            <ImageView
                android:id="@+id/iv_legend_level9_mark"
                android:layout_width="@dimen/elem_activity_graph_width"
                android:layout_height="@dimen/elem_activity_graph_height"
                android:contentDescription="@string/ImageView_contentDescription_book_cover"
                app:layout_constraintEnd_toStartOf="@+id/iv_legend_level10_mark"
                app:layout_constraintTop_toBottomOf="@+id/rv_events_graph"
                app:srcCompat="@drawable/round_square_indigo_800_24dp" />

            <ImageView
                android:id="@+id/iv_legend_level10_mark"
                android:layout_width="@dimen/elem_activity_graph_width"
                android:layout_height="@dimen/elem_activity_graph_height"
                android:contentDescription="@string/ImageView_contentDescription_book_cover"
                app:layout_constraintEnd_toStartOf="@+id/tv_bottom_legend_more_title"
                app:layout_constraintTop_toBottomOf="@+id/rv_events_graph"
                app:srcCompat="@drawable/round_square_indigo_900_24dp" />

            <TextView
                android:id="@+id/tv_bottom_legend_more_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Много"
                android:textSize="9sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="@+id/rv_events_graph"
                app:layout_constraintTop_toBottomOf="@+id/rv_events_graph" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!--    //статистика мо месяцам, автоматически заменяется на детализацию по дням при выборе значения-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView_contributions_month"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_margin="8dp"
        android:checkable="false"
        android:clickable="false"
        android:focusable="true"
        android:padding="4dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:contentPadding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/materialCardView_contributions_graph"
        app:rippleColor="#837A33F8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp">

            <TextView
                android:id="@+id/tv_activity_legend_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Активность и достижения"
                android:textSize="14sp"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_activity_legend_month12_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Декабрь 2021"
                android:textSize="12sp"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_activity_legend_title" />

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="#7b7b7b"
                android:paddingStart="8dp"
                android:paddingEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_activity_legend_month12_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_activity_legend_month12_title"
                app:layout_constraintTop_toTopOf="@+id/tv_activity_legend_month12_title" />

            <View
                android:id="@+id/tv_activity_legend_vert_line_month12_title"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:background="#7b7b7b"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_activity_legend_month12_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_activity_legend_month12_title" />

            <TextView
                android:id="@+id/tv_activity_legend_month12_summ_dacoin_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Заработано DACoin"
                android:textSize="12sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="@+id/tv_activity_legend_month12_activity_da_coin_count"
                app:layout_constraintEnd_toStartOf="@id/iv_activity_legend_month12_da_coin_icon"
                app:layout_constraintTop_toTopOf="@+id/tv_activity_legend_month12_activity_da_coin_count" />

            <ImageView
                android:id="@+id/iv_activity_legend_month12_da_coin_icon"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:contentDescription="Иконка DACoin"
                app:layout_constraintBottom_toBottomOf="@+id/tv_activity_legend_month12_activity_da_coin_count"
                app:layout_constraintEnd_toStartOf="@id/tv_activity_legend_month12_activity_da_coin_count"
                app:layout_constraintTop_toTopOf="@+id/tv_activity_legend_month12_activity_da_coin_count"
                app:srcCompat="@drawable/ic_star_checkable_24" />

            <TextView
                android:id="@+id/tv_activity_legend_month12_activity_da_coin_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="123 456"
                android:textColor="#3F51B5"
                android:textSize="14sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_activity_legend_month12_title" />
            <!--            Чтение-->
            <TextView
                android:id="@+id/tv_activity_legend_month12_summ_read_books_complit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Прочтено книг (закончено)"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@+id/tv_activity_legend_vert_line_month12_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_activity_legend_month12_summ_dacoin_title" />

            <TextView
                android:id="@+id/tv_activity_legend_month12_read_books_complit_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="4"
                android:textColor="#3C57EA"
                android:textSize="12sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="@+id/tv_activity_legend_month12_summ_read_books_complit_title"
                app:layout_constraintStart_toEndOf="@+id/tv_activity_legend_month12_summ_read_books_complit_title"
                app:layout_constraintTop_toTopOf="@+id/tv_activity_legend_month12_summ_read_books_complit_title" />

            <TextView
                android:id="@+id/tv_activity_legend_month12_read_books_process_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="В процессе чтения:"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@+id/tv_activity_legend_vert_line_month12_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_activity_legend_month12_summ_read_books_complit_title" />


            <ImageView
                android:id="@+id/imageView_book_cover"
                android:layout_width="21dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/ImageView_contentDescription_book_cover"
                app:layout_constraintStart_toStartOf="@+id/tv_activity_legend_month12_read_books_process_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_activity_legend_month12_read_books_process_title"
                app:srcCompat="@drawable/book_plug" />

            <TextView
                android:id="@+id/textView_event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Погружение в паттерны проектирования"
                android:textAlignment="textStart"
                android:textSize="12sp"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toEndOf="@+id/imageView_book_cover"
                app:layout_constraintTop_toTopOf="@+id/imageView_book_cover" />

            <TextView
                android:id="@+id/textView_fix_data_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="прочтено 45 из 160 стр."
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/textView_event_title"
                app:layout_constraintTop_toBottomOf="@id/textView_event_title" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="150dp"
                android:layout_height="12dp"
                android:max="100"
                android:progress="28"
                android:progressTint="#3F51B5"
                android:secondaryProgress="50"
                android:secondaryProgressTint="#E43C3C"
                android:secondaryProgressTintMode="src_in"
                app:layout_constraintBottom_toBottomOf="@+id/textView_fix_data_event"
                app:layout_constraintStart_toEndOf="@+id/textView_fix_data_event"
                app:layout_constraintTop_toTopOf="@+id/textView_fix_data_event" />

            <TextView
                android:id="@+id/tv_activity_legend_month12_read_books_process_proc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="28%"
                android:textColor="#3C57EA"
                android:textSize="12sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="@+id/progressBar"
                app:layout_constraintStart_toEndOf="@+id/progressBar"
                app:layout_constraintTop_toTopOf="@+id/progressBar" />


            <ImageView
                android:id="@+id/imageView_book_cover2"
                android:layout_width="21dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/ImageView_contentDescription_book_cover"
                app:layout_constraintStart_toStartOf="@+id/tv_activity_legend_month12_read_books_process_title"
                app:layout_constraintTop_toBottomOf="@id/imageView_book_cover"
                app:srcCompat="@drawable/book_plug" />

            <TextView
                android:id="@+id/textView_event_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Падшие ангелы мультиверсума"
                android:textAlignment="textStart"
                android:textSize="12sp"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toEndOf="@+id/imageView_book_cover2"
                app:layout_constraintTop_toTopOf="@+id/imageView_book_cover2" />

            <TextView
                android:id="@+id/textView_fix_data_event2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="прочтено 280 из 403 стр."
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/textView_event_title2"
                app:layout_constraintTop_toBottomOf="@id/textView_event_title2" />

